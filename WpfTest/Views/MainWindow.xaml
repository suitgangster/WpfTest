<Window
    x:Class="WpfTest.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    WindowStartupLocation="CenterScreen"
    Width="800"
    Height="800"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="CB" TargetType="CheckBox">
            <Setter Property="IsChecked" Value="False" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=tb, Path=Text}" Value="1">
                    <Setter Property="IsChecked" Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RB" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="LightBlue">
                            <!--<ContentControl
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                FontSize="13" />-->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Mouse" TargetType="Button">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Width"
                                From="100" To="200" 
                                Duration="0:0:2"
                                AutoReverse="False">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Grid>
        <StackPanel Width="600">
            <!--<TextBox x:Name="text" Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->

            <!--<TextBox x:Name="text" />
            <Slider
                x:Name="slider"
                Maximum="100"
                Minimum="0"
                Value="{Binding ElementName=text, Path=Text, Mode=TwoWay}" />-->
            <!--  .................................................................................................................  -->

            <!--<TextBox
                Name="tbox"
                local:HasTextHelper.MonitorTextChange="True"
                Text=" " />
            <CheckBox Content="是否含有文本" IsChecked="{Binding ElementName=tbox, Path=(local:HasTextHelper.IsCheck)}" />-->

            <TextBox Name="tb" />
            <CheckBox Content="输入文本1" Style="{StaticResource CB}" />

            <!--  .................................................................................................................  -->

            <!--  ContentControl 直接使用  -->
            <ContentControl Background="LightBlue" Content="Hello World" />

            <RadioButton Content="首页" Style="{StaticResource RB}" />
            <RadioButton Background="LightBlue" Content="关于我们" />

            <!--  .................................................................................................................  -->

            <Rectangle Width="100" Height="100">
                <Rectangle.Fill>
                    <RadialGradientBrush Center="0.5,1" GradientOrigin="0.5,1" RadiusX="1" RadiusY="0.5">
                        <GradientStop Offset="0.0" Color="Yellow" />
                        <GradientStop Offset="0.5" Color="Transparent" />
                        <!--<GradientStop Offset="1" Color="Red" />-->
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!--  .................................................................................................................  -->

            <Button
                Width="200"
                Height="100"
                Content="Click Me!">
                <Button.RenderTransform>
                    <!--  旋转按钮 45 度  -->
                    <!--<RotateTransform Angle="45" />-->
                    <SkewTransform AngleX="-45" AngleY="0" />
                </Button.RenderTransform>
            </Button>

            <!--  .................................................................................................................  -->
            
            <Button Style="{StaticResource Mouse}" Content="Hover over me" Width="100" Height="30"/>

            <Button Content="移动按钮" Width="100" Height="30">
                <Button.RenderTransform>
                    <TranslateTransform x:Name="translateTransform"/>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="translateTransform"
                        Storyboard.TargetProperty="X"
                        To="200" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

            <Button Content="旋转按钮" Width="100" Height="30">
                <Button.RenderTransform>
                    <RotateTransform x:Name="rotateTransform" CenterX="50" CenterY="15"/>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="rotateTransform"
                        Storyboard.TargetProperty="Angle"
                        To="360" Duration="0:0:2"
                        RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

            <Button Content="缩放按钮" Width="100" Height="30">
                <Button.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform" CenterX="50" CenterY="15"/>
                </Button.RenderTransform>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                        Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="1.2" Duration="0:0:0.3"/>
                                <DoubleAnimation
                        Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="1.2" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

            <!--PointAnimation-->
            <!--<Viewbox>
                <Canvas Width="400" Height="300">
                    --><!-- 目标图形 --><!--
                    <Path x:Name="AnimatedPath" Fill="Red" Stroke="DarkRed" StrokeThickness="2">
                        <Path.Data>
                            <EllipseGeometry x:Name="MovingEllipse" Center="50,150" RadiusX="20" RadiusY="20"/>
                        </Path.Data>
                    </Path>

                    --><!-- 控制点显示 --><!--
                    <Ellipse Canvas.Left="45" Canvas.Top="145" Width="10" Height="10" Fill="Green" 
                         x:Name="StartPoint"/>
