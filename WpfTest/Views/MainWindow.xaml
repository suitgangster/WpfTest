                         x:Name="EndPoint"/>
                    <TextBlock Canvas.Left="50" Canvas.Top="120" Text="起点" Foreground="Green"/>
                    <TextBlock Canvas.Left="350" Canvas.Top="120" Text="终点" Foreground="Blue"/>

                    --><!-- 动画触发器 --><!--
                    <Button Canvas.Left="150" Canvas.Top="250" Content="开始点动画" 
                        Click="StartAnimation_Click" Padding="10,5"/>
                </Canvas>
            </Viewbox>-->
            <!--  .................................................................................................................  -->
            <ListBox ItemsSource="{Binding num}" Width="100" Height="200" Background="LightBlue"/>


        </StackPanel>
    </Grid>
</Window>
