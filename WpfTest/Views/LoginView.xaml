<Window
    x:Class="WpfTest.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:comm="clr-namespace:WpfTest.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="window"
    Title="LoginView"
    Width="360"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <UniformGrid Margin="0,150" Rows="3">
            <StackPanel
                Width="300"
                Height="30"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="Orange"
                    Text="账号:" />
                <TextBox
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Center"
                    BorderThickness="0,0,0,1"
                    Text="{Binding Account, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel
                Width="300"
                Height="30"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="密码:" />
                <!--<TextBox
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Center"
                    BorderThickness="0,0,0,1" Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}"/>-->
                <PasswordBox
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Center"
                    comm:PasswordHelper.Attach="True"
                    comm:PasswordHelper.Password="{Binding Password, Mode=TwoWay}"
                    BorderThickness="0,0,0,1" />
            </StackPanel>
            <Button
                Width="200"
                Height="30"
                Background="Pink"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=window}"
                Content="登录"
                IsDefault="True" />
        </UniformGrid>
    </Grid>
</Window>
